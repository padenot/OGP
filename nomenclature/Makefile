TARGET_SUFFIX=pdf
DOT=dot -T$(TARGET_SUFFIX)

RESSOURCES_PATH=src/
TARGETS_PATH=./
RESSOURCES=$(wildcard $(RESSOURCES_PATH)/*.dot)
TARGETS=$(patsubst $(RESSOURCES_PATH)/%.dot,$(TARGETS_PATH)/%.$(TARGET_SUFFIX),$(RESSOURCES))

all: $(TARGETS)

$(TARGETS_PATH)/%.$(TARGET_SUFFIX) : $(RESSOURCES_PATH)/%.dot
	dot -T$(TARGET_SUFFIX) $< -o $@
